<div class="container">

	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Da-Burger</h1>
		</div>
	</div>


	<div class="row">
		<div class="col-md-5">
			<h3>Available Burgers</h3>
			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}
				<li>
					<h5>{{this.id}}. {{this.burger_name}}
						<form id="updateBurgerForm" action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
							<input type='hidden' name='devoured' value='true'>
							<button type='submit' class="btn btn-default">Devour it</button>
						</form>
					</h5>
				</li>
				{{/unless}}
				{{/each}}
			</ul>
		</div><!-- end column 1 -->











		<div class="col-md-2"></div><!-- spacer column -->


		<div class="col-md-5">
			<h3 class="text-muted">Devoured Burgers</h3>
			<ul>
				{{#each burgers}}
				{{#if this.devoured}}
				<li>
					<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
				</li>
				{{/if}}
				{{/each}}
			</ul>
		</div><!-- end column 2 -->

	</div>

	<br><br>

	<div class="row">
		<div class="col-md-12 text-center">
			<form class="insert-update-form" id="addBurgerForm">
				<div class="form-group">

					<textarea id="addBurgerText" type="text" name="name"></textarea><br>
					<button class="btn btn-default" id="addBurgerButton" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you want to eat then click Submit button.</h5>
				</div>
			</form>
		</div>
	</div>
  <script src="/js/handleAddBurger.js">
            
        </script>

	<!-- end bootstrap container -->
</div>

